//auto calculate size of headline 
$sumOfSize:0;
@for $i from 6 through 1{
	@if ($i == 6)
	{
		h#{$i}{
			font-size: 30%; 	
		}	
	}
	@else
	{
		h#{$i}{
			$sumOfSize : $sumOfSize + 80%;
			font-size: $sumOfSize; 
		}	 
	}
}
div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4,
